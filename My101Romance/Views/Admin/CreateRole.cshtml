@model My101Romance.Domain.ViewModels.Roles.CreateRoleViewModel;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Role";
}

<h1 class="text-center">Create New Role</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Create Role</div>
                <div class="card-body">
                    <form asp-action="CreateRole" method="post">
                        <div class="form-group">
                            <label asp-for="RoleName">Role Name</label>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter role name" required>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <br/>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
