@model IEnumerable<My101Romance.Domain.Entity.Card>

<h1 class="text-center">Случайные карты</h1>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var card in Model)
        {
            <div class="col-md-6">
                <div>
                    <p>@card.Id</p>
                    <p>@card.Title</p>
                    <p>@card.Description</p>
                    <hr/>
                </div>
   
            </div>
        }
    </div>
</div>