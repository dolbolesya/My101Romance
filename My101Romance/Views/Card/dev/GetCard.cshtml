@using My101Romance.Domain.Entity
@model My101Romance.Domain.Entity.Card
@{
    Layout = "_Layout";
}
<br/>


<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Model.ImagePath" class="card-img" alt="card">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Title</h3>
                <p class="card-text">@Model.Description</p>
                @if (User.IsInRole("Admin"))
                {
                    <p>ID: @Model.Id</p>
                    <p>Rating: @Model.Rating</p>
                }
            </div>
        </div>
    </div>
</div>

